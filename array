//finding second largest element without sorting
#include<bits/stdc++.h>
using namespace std;
int findseclargest(vector<int>&arr)
{
    if(arr.size()<2)
    {
        return -1;
    }
    int small=arr[0];
    int secsmall=arr[0];
    for(int i=0;i<arr.size();i++)
    {
        if(arr[i]<small)
        {
            secsmall=small;
            small=arr[i];
        }
        else if(arr[i]<secsmall&& arr[i]!=small)
        {
            secsmall=arr[i];
        }
        return secsmall;     
    }
}
