//sorted array check
#include<bits/stdc++.h>
using namespace std;
bool checksort(vector<int>&arr)
{
    for(int i=1;i<arr.size();i++)
    {
        if(arr[i]<arr[i-1])
        {
            return true;
        }
        return false;
    }
}
